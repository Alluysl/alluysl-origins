{
	"type": "origins:multiple",
	"name": "Underground Familiarity",
	"description": "Your eyes are fit for the dark, granting you permanent night vision, but not for bright lights, making you slower and weaker when exposed to them. Additionally, you are less hungry while underground.",

	"actually_exposed_to_sun": {
		"type": "origins:resource",
		"min": 0,
		"max": 1,
		"start_value": 0,
		"hud_render": {
			"should_render": false
		}
	},

	"actually_exposed_to_sun_update": {
		"type": "origins:action_over_time",
		"_description": "Explanation: https://github.com/apace100/origins-fabric/issues/312",
		"entity_action": {
			"type":"origins:if_else",
			"condition": {
				"type": "origins:brightness",
				"comparison": ">",
				"compare_to": 0.7
			},
			"if_action": {
				"type": "origins:execute_command",
				"command": "resource set @s alluyslorigins:underground_familiarity_actually_exposed_to_sun 1"
			},
			"else_action": {
				"type": "origins:execute_command",
				"command": "resource set @s alluyslorigins:underground_familiarity_actually_exposed_to_sun 0"
			}
		},
		"interval": 4
	},

	"night_vision": {
		"type": "origins:stacking_status_effect",
		"min_stacks": 1,
		"max_stacks": 1,
		"duration_per_stack": 240,
		"effects": [
			{
				"effect": "minecraft:night_vision",
				"is_ambient": true,
				"show_particles": false,
				"show_icon": false
			}
		]
	},

	"sunlight_aversion": {
		"type": "origins:stacking_status_effect",
		"min_stacks": 0,
		"max_stacks": 1,
		"duration_per_stack": 20,
		"effects": [
			{
				"effect": "minecraft:weakness",
				"is_ambient": true,
				"show_particles": false,
				"show_icon": true
			},
			{
				"effect": "minecraft:slowness",
				"is_ambient": true,
				"show_particles": false,
				"show_icon": true
			}
		],
		"condition": {
			"type": "origins:resource",
			"resource": "alluyslorigins:underground_familiarity_actually_exposed_to_sun",
			"comparison": "==",
			"compare_to": 1
		}
	},

	"eye_burn": {
		"type": "origins:shader",
		"shader": "alluyslorigins:shaders/post/brightness_bomb.json",
		"condition": {
			"type": "origins:resource",
			"resource": "alluyslorigins:underground_familiarity_actually_exposed_to_sun",
			"comparison": "==",
			"compare_to": 1
		}
	},

	"reduced_exhaustion": {
		"type": "origins:modify_exhaustion",
		"modifier": {
			"name": "Underground Familiarity exhaustion reduction",
			"operation": "multiply_total",
			"value": -0.5
		},
		"condition": {
			"type": "origins:exposed_to_sky",
			"inverted": true
		}
	}
}